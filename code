#include <Arduino.h>

const int IR_pin = 12;
const int green_led_pin = 2;

void setup() {
  pinMode(IR_pin, INPUT);
  pinMode(green_led_pin, OUTPUT);
}

void loop() {
  int distance = 12 * pow(analogRead(IR_pin) / 1024.0, -1); 
  if (distance <= 20) { 
    digitalWrite(green_led_pin, HIGH); 
  } else {
    digitalWrite(green_led_pin, LOW); 
  }
  delay(100); 
}
